<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/details"
    android:background="@drawable/img_detail_background"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/img_details"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:layout_marginTop="10dp"
            android:src="@drawable/main_img_trapeze_details"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:id="@+id/container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detail_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:textColor="@color/white"
                        android:text="@string/corner_alpha"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/textView_detail_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:gravity="end"
                        />

                </LinearLayout>

                <LinearLayout
                android:id="@+id/line2_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textColor="@color/white"
                    android:text="@string/corner_betta"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textView_detail_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="end"
                    />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/detail_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="60"
                        android:text="@string/corner_sigma"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/textView_detail_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="40"
                        android:textSize="20sp"
                        android:gravity="end"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/detail_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="60"
                        android:text="@string/corner_delta"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/textView_detail_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="40"
                        android:textSize="20sp"
                        android:gravity="end"
                        />


                </LinearLayout>
                <LinearLayout
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textColor="@color/white"
                    android:text="@string/side_a"
                    android:textAllCaps="false"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/textView_detail_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="40"
                    android:textSize="20sp"
                    android:gravity="end"
                    />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/detail_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="60"
                        android:text="@string/side_b"
                        android:textAllCaps="false"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/textView_detail_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="40"
                        android:textSize="20sp"
                        android:gravity="end"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/detail_7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="60"
                        android:text="@string/side_c"
                        android:textAllCaps="false"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/textView_detail_7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="40"
                        android:textSize="20sp"
                        android:gravity="end"
                        />


                </LinearLayout>
                <LinearLayout
                android:id="@+id/line8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="60"
                    android:text="@string/side_d"
                    android:textAllCaps="false"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/textView_detail_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="40"
                    android:textSize="20sp"
                    android:gravity="end"
                    />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/detail_9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="60"
                        android:text="@string/height_h"
                        android:textAllCaps="false"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/textView_detail_9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="40"
                        android:textSize="20sp"
                        android:gravity="end"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/detail_10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="60"
                        android:text="@string/perimeter"
                        android:textAllCaps="false"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/textView_detail_10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="40"
                        android:textSize="20sp"
                        android:gravity="end"
                        />


                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_close_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_stroke_graydim_press_graydark"
            android:padding="10dp"
            android:text="@string/back"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>